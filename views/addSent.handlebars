<div class="grid-x grid-padding-x align-center">
    <div class="cell small-12">
        <h3 class="text-center">Add a Sent Gift</h3>
    </div>
</div>
<form>
    <div class="grid-container">
        <div class="grid-x grid-padding-x align-center">
            <div class="medium-4 cell">
                <label>Gift
                    <input type="text" placeholder=".medium-4.cell">
                </label>
            </div>
            <div class="medium-4 cell">
                <label>Date Sent
                    <input type="text" placeholder=".medium-4.cell">
                </label>
            </div>
            <div class="medium-4 cell">
                <label>Occasion
                    <input type="text" placeholder=".medium-4.cell">
                </label>
            </div>
            <div class="medium-4 cell">
                <label>Cost
                    <input type="text" placeholder=".medium-4.cell">
                </label>
            </div>
            <div class="medium-4 cell">
                <label>Receiver Name
                    <input type="text" placeholder=".medium-4.cell">
                </label>
            </div>
            <div class="medium-4 cell">
                <label>Receiver Address
                    <input type="text" placeholder=".medium-4.cell">
                </label>
            </div>
            <div class="medium-4 cell">
                <button id="submit" class="submit button">Add Gift</button>
            </div>
        </div>
    </div>
</form>