<main class="grid-container">
  {{!-- Page Title --}}
  <div class="grid-x grid-padding-x align-center">
    <h2 class="text-center">Gifts Sent</h2>
  </div>

  <div class="grid-x grid-padding-x align-center">
    <div class="medium-4 cell">
      {{!-- Order Gifts Button --}}
      <label>
        <h4 class="text-center">Order Gifts By</h4>
        <select id="orderSent">
          <option value="name">Receiver's Name</option>
          <option value="gift">Gift Name</option>
          <option value="occasion">Occasion</option>
          <option value="">Date Sent</option>
        </select>
      </label>
      <button id="orderGiftsSent" class="submit button expanded btnYellow">Order</button>
    </div>
    {{!-- Add Button --}}
    <div class="medium-6 cell text-center">
      <a href="/add/sent" class="button btnBlue">Add a New Gift</a>
    </div>
  </div>
  {{!-- Table --}}
  <section class="grid-x grid-padding-x align-center">
    <table class="hover">
      <thead>
        <tr>
          <th width="150">Gift</th>
          <th width="150">Date Sent</th>
          <th width="150">Occasion</th>
          <th width="150">Cost</th>
          <th width="150">Receiver's Name</th>
          <th width="150">Receiver's Address</th>
          <th width="150">Edit/Delete</th>
        </tr>
      </thead>
      <tbody>
        {{#each gifts}}
        <tr>
          <td><span>{{giftSent}}</span><input id="editedGift{{id}}" type="text" value="{{giftSent}}"
              class="displayNone"></td>
          <td><span>{{dateSent}}</span><input id="editedDate{{id}}" type="text" value={{dateSent}} class="displayNone">
          </td>
          <td><span>{{occasion}}</span><input id="editedOccasion{{id}}" type="text" value="{{occasion}}"
              class="displayNone">
          </td>
          <td><span>${{cost}}</span><input id="editedCost{{id}}" type="text" value="{{cost}}" class="displayNone"></td>
          <td><span>{{receiverName}}</span><input id="editedReceiver{{id}}" type="text" value="{{receiverName}}"
              class="displayNone"></td>
          <td><span>{{receiverAddress}}</span><input id="editedAddress{{id}}" type="text" value="{{receiverAddress}}"
              class="displayNone"></td>
          <td><button data-id="{{id}}" type="button" class="editbtn small button btnGreen">edit</button>
            <button data-id="{{id}}" type="button" data-open="modalSent"
              class="deletebtn small button btnRed">delete</button></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </section>
</main>

{{!-- Added successfully modal --}}
<div class="reveal text-center" id="modalSent" data-reveal>
  <h1>Success!</h1>
  <p class="lead">Your gift was deleted!</p>
  <button class="close-button modalClose" data-close aria-label="Close modal" type="button">
    <span aria-hidden="true">&times;</span>
  </button>
</div>