<h1 class="text-center">Gifted</h1>

<button id="logoutBtn" type="button" class="button">Logout</button>
<button id="giftsYouSentBtn" type="button" class="button">Gifts You Sent</button>

<hr>

<h2 class="text-center">Gifts You Received</h2>

<button id="addNewGiftBtn" type="button" class="button">Add a New Gift</button>

<table>
  <thead>
    <tr>
      <th width="150">Gift You Received</th>
      <th width="150">Date Received</th>
      <th width="150">Occasion</th>
      <th width="150">Sender's Name</th>
      <th width="150">Sender's Address</th>
      <th width="150">Thank You</th>
      <th width="150">Edit/Delete</th>
    </tr>
  </thead>
<tbody>
    {{#each gifts}}
    <tr>
      <td>{{giftReceived}}</td>
      <td>{{dateReceived}}</td>
      <td>{{occasion}}</td>
      <td>{{senderName}}</td>
      <td>{{senderAddress}}</td>
      <td>{{thankYou}}</td>
      <td><button type="button" class="editbtn small button success">edit</button>
      <button type="button" class="deletebtn small button alert">delete</button></td>
    </tr>
    {{/each}}
  </tbody>
</table>

<script>
  $(document).ready(function() {

    $("#logoutBtn").on("click", function(){
      window.location.href = "/";
    });

    $("#giftsYouSentBtn").on("click", function(){
      window.location.href = "/sent";
    });

    $("#addNewGiftBtn").on("click", function(){
      window.location.href = "/add/received";
    });

  });
</script>